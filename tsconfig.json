{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules",
    "eslint.config.js",
    "postcss.config.js",
    "tailwind.config.js",
    "vite.config.ts"
  ]
}